<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List_homestay"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="20dp"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_baseline_chevron_left_24"
                    app:backgroundTint="#8F8F8F"
                    android:layout_marginTop="8px"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Homestay Terdekat"
                    android:textSize="26sp"
                    android:textColor="#000000"
                    android:shadowColor="#4000000"
                    android:shadowDx="10sp"
                    android:paddingLeft="50sp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="#f6f6f6"
            android:padding="10sp">

            <EditText
                android:background="@drawable/backgroundtextsearch"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Cari Homestay"
                android:textSize="22sp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_baseline_search_24"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
</LinearLayout>